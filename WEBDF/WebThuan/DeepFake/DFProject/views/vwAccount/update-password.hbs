<form action="" method="post">
    <div class="card">
        <div class="card-header">
            Mật khẩu
        </div>
        <div class="card-body">
            <div class="form-group">
                <input type="hidden" value="{{this.user.id}}" name="id" id="txtID" class="form-control" placeholder="" readonly>
            </div>
            <div class="form-group">
                <label for="txtUsername">Tên đăng nhập</label>
                <input type="text" value="{{this.user.username}}" name="username" id="txtUsername" class="form-control" placeholder="" readonly>
            </div>
            <div class="form-group">
                <label for="txtPassword">Mật khẩu mới</label>
                <input type="password" name="raw_password" id="txtPassword" class="form-control" placeholder="">
            </div>
        </div>
        <div class="card-footer text-muted">
            <a name="" id="" class="btn btn-primary" href="/" role="button">
                <i class="bi bi-arrow-left-circle"></i>
                Quay lại
            </a>
            <button type="submit" class="btn btn-primary" formaction="/account/pat">
                <i class="bi bi-check2"></i>
                Đổi mật khẩu
            </button>
        </div>
    </div>
</form>