<form action="" method="post">
    <div class="card">
        <div class="card-header">
            Profile
        </div>
        <div class="card-body">
            <div class="form-group">
                <input type="hidden" value="{{this.user.id}}" name="id" id="txtID" class="form-control" placeholder="" readonly>
            </div>
            <div class="form-group">
                <label for="txtUsername">Tên đăng nhập</label>
                <input type="text" value="{{this.user.username}}" name="username" id="txtUsername" class="form-control" placeholder="">
            </div>
            {{#if (eq this.user.permission 3)}}
            <div class="form-group">
                <label for="txtName">Bút danh</label>
                <input type="text" value="{{this.user.name}}" name="name" id="txtName" class="form-control" placeholder="">
            </div>
            {{else}}
            <div class="form-group">
                <label for="txtName">Tên</label>
                <input type="text" value="{{this.user.name}}" name="name" id="txtName" class="form-control" placeholder="">
            </div>
            {{/if}}
            <div class="form-group">
                <label for="txtEmail">Email</label>
                <input type="text" value="{{this.user.email}}" name="email" id="txtEmail" class="form-control" placeholder="">
            </div>
            <div class="form-group">
              <label for="txtDOB">Ngày tháng năm sinh 'Vd: 2014-05-06'</label>
              <input type="text" value="{{this.user.dob}}" name="raw_dob" id="txtDOB" class="form-control" placeholder="">
            </div>
        </div>
        <div class="card-footer text-muted">
            <a name="" id="" class="btn btn-primary" href="/" role="button">
                <i class="bi bi-arrow-left-circle"></i>
                Quay lại
            </a>
            <button type="submit" class="btn btn-primary" formaction="/account/patch">
                <i class="bi bi-check2"></i>
                Cập nhật
            </button>
        </div>
    </div>
</form>